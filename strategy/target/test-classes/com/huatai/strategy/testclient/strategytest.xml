<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context.xsd
	http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">

	<context:annotation-config />
	<bean id="strategyClient" class="com.huatai.strategy.testclient.StrategyClient">
		<property name="strategyParams">
			<value><![CDATA[
			{
				"Universe":[
					{
						"Symbol":"600827.SH",
						"InitPosition":10000, 
						"BuySecurityAccount":"sc01",
						"SellSecurityAccount":"sc01",
						"BuyTradingAccount":"tradingAccount01",
						"SellTradingAccount":"tradingAccount01",
						"PortfolioNo":"portfolioNo01",
						"PortfolioType":"portfoliotype01"
					}
				],
				"PressureRatePeriod":15,
				"BoundaryPointN1":30,
				"BoundaryPointN2":60,
				"BreakPointR":0.015,
				"BreakPointP":0.5,
				"WaveNum":5,
				"LowBoundary1":0.005,
				"QtyStandardThreshold":1,
				"ParaRate":0.5,
				"MinPressureRate":4,
				"AskValueThreshold":150000,
				"LowBoundary2":0.003,
				"PressureUpdatePara":0.003,
				"SignalParaP1":10,
				"SignalParaP2":0,
				"SignalParaP3":15,
				"SignalParaP4":150000,
				"SignalParaP5":0.5,
				"SignalParaP6":2,
				"SignalParaP7":0.003,
				"SignalParaP8":50000,
				"SignalParaP9":4,
				"SignalParaP10":0.09,
				"BuyLevel":1,
				"BuyDeviation":0.01,
				"SellLevel":1,
				"SellDeviation":-0.01,
				"SignalParaP11":2,
				"SignalParaP12":500000,
				"SignalParaP13":0.2,
				"SignalParaP14":9,
				"SignalParaP15":3,
				"AvgPriceLag":10,
				"EMAPressureRatioLag":10,
				"CloseMaxDrop":0.003
			}
			]]></value>
		</property>
	</bean>
	
	<bean id="fixBaseClient" class="com.huatai.platform.client.FixBaseClient">
		<property name="initPeriod" value="3000" />
		<constructor-arg>
			<list>
				<ref bean="fixClientAdaptor" />
			</list>
		</constructor-arg>
	</bean>

	<bean id="fixClientAdaptor" class="com.huatai.platform.client.FixClientAdaptor">
		<property name="charset" value="UTF-8" />
		<constructor-arg type="String">
			<value><![CDATA[		
[default]
PersistMessages=Y
FileLogPath=log/fix/fixtestclient/strategyTest/log
FileStorePath=log/fix/fixtestclient/strategyTest/store
ConnectionType=initiator
SocketConnectHost=localhost
SocketConnectPort=14001
SenderCompID=fixStrategyTestClient-001
StartTime=00:00:00
EndTime=00:00:00
HeartBtInt=30
ReconnectInterval=5
ResetOnLogon=Y
UseDataDictionary=Y
CheckLatency=N
ValidateUserDefinedFields=N
DefaultApplVerID=FIX.5.0SP2
AppDataDictionary=common/dic/htquant/FIX50SP2.xml
TransportDataDictionary=common/dic/htquant/FIXT11.xml

[session]
BeginString=FIXT.1.1
TargetCompID=dev.htquant-001.upstream-001.fixUpStreamAdaptor-001
		]]></value>
		</constructor-arg>
	</bean>
		
</beans>

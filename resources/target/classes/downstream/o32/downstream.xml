<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context.xsd
	http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">

	<context:annotation-config />
	<import resource="classpath:common/settings.xml" />
	<import resource="classpath:common/databaseSession.xml" />
	<import resource="classpath:common/common.xml" />
	<import resource="classpath:downstream/o32/module-downstream.xml" />

	<bean id="platform" class="com.huatai.platform.Platform">
		<property name="heartBeatInterval" value="3000" />
		<property name="plugins">
			<list>
				<ref bean="eventManager" />
				<ref bean="scheduleManager" />
				<ref bean="downStreamManager" />
			</list>
		</property>
	</bean>

	<bean id="systemInfo" class="com.huatai.common.SystemInfo">
		<property name="env" value="dev" />
		<property name="category" value="ats-001" />
		<property name="id" value="${downstream.id}" />
		<property name="type" value="Downstream" />
	</bean>
</beans>
